#!/usr/bin/env ruby

# Compass requirements
require 'compass'
Compass.add_project_configuration('config.rb')

# A few helpful tips about the Rules file:
#
# * The order of rules is important: for each item, only the first matching
#   rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#   “content/about.html”). To select all children, grandchildren, … of an
#   item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#   because “*” matches zero or more characters.

# sass styles
compile '/styles/*' do
  filter :sass, Compass.sass_engine_options
end
route '/styles/*' do
  item.identifier.chop + '.css'
end

# scripts
compile "/scripts/*" do
  nil # Do Nothing!
end
route '/scripts/*' do
  item.identifier.chop + '.js'
end

#images
compile "/images/*" do
  nil # Do Nothing!
end
route '/images/*' do
  item.identifier.chop + '.' + item[:extension]
end

# fonts
compile "/fonts/*" do
  nil # Do Nothing!
end
route '/fonts/*' do
  item.identifier.chop + '.' + item[:extension]
end

# htaccess
route '/htaccess/' do
  '/.htaccess'
end

# main html pages
compile '*' do
  if item[:extension] == 'haml'
    filter :haml
    layout 'default'
  else
    nil
  end
end
route '*' do
  if item[:extension] == 'haml'
    item.identifier + 'index.html'
  elsif item[:extension] == 'php'
    item.identifier + 'index.php'
  else
    item.identifier.chop + '.' + item[:extension]
  end
end

# ajax
compile '*', :rep => :ajax do
  if item[:extension] == 'haml' || item[:extension] == 'php'
    filter :haml
    layout 'ajax'
  end
end
route '*', :rep => :ajax do
  if item[:extension] == 'haml'
    if item.identifier.chop == ''
      '/ajax/index.html'
    else
      '/ajax' + item.identifier.chop + '.html'
    end
  elsif item[:extension] == 'php'
      '/ajax' + item.identifier.chop + '.php'
  end
end

layout '*', :haml, :format => :html5
