%html{:lang =>"en"}
  %head
    %meta{:charset =>"utf-8"}
    %title William Youmans | #{@item[:browser_title]}

    / Meta Tags
    %meta{:name => "keywords", :value => "William Youmans Salt Lake City Utah Web Development Design CSS HTML PHP freelance photoshop inkscape gimp illustrator cheap free reasonable solution"}
    %meta{:name => "google-site-verification", :content => "8voZqnU2KWpmU2Nuha3ZBfzSRNnEiQkeS9g1yOQCR54"}
    %meta{:name => "description", :content => "William Youmans"}
    %meta{:name => "author", :content => "William Youmans"}
    %meta{:name => "ROBOTS", :content => "ALL"}

    / Favicon
    %link{:rel => "shortcut icon", :href => "/images/favicon.ico"}

    / Stylesheets
    %link{:rel => "stylesheet", :type =>"text/css", :href => "/styles/screen.css#{$random}", :media =>"screen"}

    / Scripts
    %script{:src => "/scripts/jquery.js", :type => "text/javascript", :charset => "utf-8"}
    %script{:src => "/scripts/jqueryui.js", :type => "text/javascript", :charset => "utf-8"}
    %script{:src => "/scripts/livequery.js", :type => "text/javascript", :charset => "utf-8"}
    %script{:src => "/scripts/modernizr.js", :type => "text/javascript", :charset => "utf-8"}
    %script{:src => "/scripts/functions.js#{$random}", :type => "text/javascript", :charset => "utf-8"}
    - if !$devserver
      %script{:src => "/scripts/ga.js", :type => "text/javascript", :charset => "utf-8"}
  %body{:id => @item[:url]}
    #container
      %header

        / Text logo for SEO cred
        %a#logo{:href => "/"}
          William Youmans<br>
          %span
            web developer &ndash; world traveler

        / Can I get some navigation up in here?
        %nav#navigation
          %ul
            %li.index
              %a{:href => "/", :data => {:url => "index"}}
                Home
            %li.photos
              %a{:href => "/photos/", :data => {:url => "photos"}}
                Photos
            %li.portfolio
              %a{:href => "/portfolio/", :data => {:url => "portfolio"}}
                Portfolio
            %li.blog
              %a{:href => "/blog/", :data => {:url => "blog"}}
                Blog
            %li.contact
              %a{:href => "/contact/", :data => {:url => "contact"}}
                Contact

      / Main Content
      #content

        / To be updated via Ajax on history.pushState()
        #content_ajax
          = yield
        .clear
        #ajax_loading
          %img{:src => "/images/template/ajax-loading.gif", :alt => "Ajax Loading"}

      / Delicious Footer
      %footer
        #copyright
          &copy;2011 William Youmans
        #social
          %a{:href => "http://www.facebook.com/wyoumans", :target => "_blank"}
            %img{:src => "/images/icons/social/facebook-bw.png", :alt => "William Youmans on Facebook"}
          %a{:href => "http://www.last.fm/user/gotwilly/", :target => "_blank"}
            %img{:src => "/images/icons/social/lastfm-bw.png", :alt => "William Youmans on Last FM"}
          %a{:href => "http://www.github.com/klanoma", :target => "_blank"}
            %img{:src => "/images/icons/social/github-bw.png", :alt => "William Youmans on Github"}
        .clear
